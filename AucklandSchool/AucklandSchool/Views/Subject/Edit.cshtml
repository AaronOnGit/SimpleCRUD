@model AucklandSchool.Models.SubjectEditVM
@{
    ViewBag.Title = ViewBag.Label;
}

@using (Html.BeginForm("Edit", "Subject", FormMethod.Post, new
{
    @class = "form-horizontal col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-7 col-sm-offset-2 col-xs-11 col-xs-offset-1"
}))
{
    <h2 class="col-lg-7 col-lg-offset-4 col-md-7 col-md-offset-4 col-sm-7 col-sm-offset-4" style="padding-left: initial">@ViewBag.Label</h2>
    @Html.AntiForgeryToken()
    <div class="form-group required">
        @Html.LabelFor(model => model.Name, new { @class = "col-lg-4 col-md-4 col-sm-4 hidden-xs" })
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control col-lg-7 col-md-7 col-sm-7 col-xs-10" })
    </div>
     <div class="form-group ">
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger col-lg-7 col-lg-offset-4 col-md-7 col-md-offset-4 col-sm-7 col-sm-offset-4 col-xs-10", @style = "padding-left:0px" })
    </div>
    <div class="form-group" >
        <div class="col-lg-7 col-lg-offset-4 col-md-7 col-md-offset-4 col-sm-7 col-sm-offset-4 col-xs-7 col-xs-offset-5 " style="padding-left:inherit ">
            <input class="btn btn-primary submitButton" type="submit" name="savwParent" id="submitbutton" value="Save" />
            <input type="button" value="Cancel" class="goBack btn btn-primary" onclick="location.href='@Url.Action("Index", "Subject")'" />
        </div>
    </div>

}
